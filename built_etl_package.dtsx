<Executable xmlns="www.microsoft.com/SqlServer/Dts">
  <ConnectionManagers>
    <ConnectionManager CreationName="OLEDB" ObjectName="SourceDB">
      <Property Name="ConnectionString">Server=myserver;Database=SourceDB;Trusted_Connection=True;Provider=SQLNCLI11.1;</Property>
    </ConnectionManager>
    <ConnectionManager CreationName="OLEDB" ObjectName="TargetDB">
      <Property Name="ConnectionString">Server=myserver;Database=TargetDB;Trusted_Connection=True;Provider=SQLNCLI11.1;</Property>
    </ConnectionManager>
    <ConnectionManager CreationName="FLATFILE" ObjectName="LogFile">
      <Property Name="ConnectionString">C:\logs\etl_log.txt</Property>
    </ConnectionManager>
  </ConnectionManagers>
  <Variables>
    <Variable Namespace="User" ObjectName="SourcePath">
      <VariableValue DataType="8">C:\data\input\customers.csv</VariableValue>
    </Variable>
    <Variable Namespace="User" ObjectName="TargetPath">
      <VariableValue DataType="8">C:\data\output\customers_processed.csv</VariableValue>
    </Variable>
    <Variable Namespace="User" ObjectName="BatchSize">
      <VariableValue DataType="3">1000</VariableValue>
    </Variable>
    <Variable Namespace="User" ObjectName="ProcessDate">
      <VariableValue DataType="135">2025-01-01</VariableValue>
    </Variable>
    <Variable Namespace="User" ObjectName="EnableLogging">
      <VariableValue DataType="11">true</VariableValue>
    </Variable>
  </Variables>
</Executable>